<h2>Posts by Tag: <%= @category.name %></h2>

<% @sprinkles.each do |sprinkle| %>
  <article>
    <h3><%= sprinkle.quote %></h3>
    <p><%= sprinkle.character %></p>
    <p><%= sprinkle.show %></p>
    <% if sprinkle.tags.length > 0 %>
      <p>tags</p>
      <% sprinkle.tags.each do |tag| %>
        <p><%= tag.category.name %></p>
        <% end %>
      <% end %>
    </article>
    <h3><%= link_to "#{sprinkle.quote}", sprinkle_path(sprinkle) %></h3>
  <% end %>
<%= link_to "add new sprinkle", new_prinkle_path %>
